<div>
    <p class="message">{{title}}</p>
</div>
{{#if gems}}
<div class="container text-center">
    <div class="msg">
        <h5>{{msg}}</h5>
    </div>
</div>
<div class="container" id="">
    <div class="row text-center cardContainer" id="card">
        {{#each gems}}

        <div class="col-xs-4 eachCard">
            <div class="card h-100" id="gem-card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.image}}" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text" id="text">{{this.description}}</p>
                    <p class="card-text">{{this.category}}</p>
                    <p class="card-text">{{this.address}}</p>
                    <a href="/gems/{{this.id}}" class="btn btn-primary btn-outline-primary">More Info</a>
                   
                </div>

            <form id="put_update">
                <button class="btn btn-link" type="submit" id="like-btn" data-id="{{this.id}}">LIKE</button> {{this.likes}} --{{this.id}}
            </form>

            <form id="put_update">
                <button class="btn btn-link" type="submit" id="dislike-btn" data-id="{{this.id}}">DISLIKE</button> {{this.dislikes}} --{{this.id}}
            </form>
 
            
            </div>
          </div>
        {{/each}}
        
    </div>
</div>
{{else}}
<div class="container text-center">
    <h5>Sorry, nothing found by your request...</h5>
</div>
{{/if}}