        <p id="sign-in-header">New Gem</p>

        <form id="new_post_form" name="newgem" method="post" action="/newgem">
            <div class="form-group">
                <label for="title_input" class="col-sm-3 col-form-label logins">Title</label>
                <input name="title" id="title_input" type="text" />
            </div>
            <div class="form-group">
                <label for="category" class="col-sm-3 col-form-label logins">Category</label>
                <select class="form-control" name="category" id="exampleFormControlSelect1">
                    <option>Art</option>
                    <option>Outdors</option>
                    <option>Events</option>
                    <option>Other</option>
                </select>
                </div>
            <div class="form-group">
                <label for="address" class="col-sm-3 col-form-label logins">Address</label>
